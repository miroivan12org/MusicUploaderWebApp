<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script> 
    <script src="~/Scripts/Custom/HandleCookies.js"></script>
    <script src="~/Scripts/Custom/Languages.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    var user = HttpContext.Current.User;
                    @Html.ActionLink(MusiUploaderWeb.App_GlobalResources.RGlobal.Home, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" });
                    @Html.ActionLink(MusiUploaderWeb.App_GlobalResources.RGlobal.Logout, "LogOut", "Account", new { area = "" }, new { @class = "navbar-brand right" });
                    @Html.ActionLink(MusiUploaderWeb.App_GlobalResources.RGlobal.EditProfile, "EditProfile", "Account", new { area = "" }, new { @class = "navbar-brand right" });
                    if (user.IsInRole("Admin"))
                    {
                        @Html.ActionLink(MusiUploaderWeb.App_GlobalResources.RGlobal.ManageUsers, "ManageUsers", "Home", new { area = "" }, new { @class = "navbar-brand" });
                        @Html.ActionLink("Generate xml", "Index", "XmlGenerator", new { area = "" }, new { @class = "navbar-brand" });
                    }
                }
                else
                {
                    @Html.ActionLink(MusiUploaderWeb.App_GlobalResources.RGlobal.Register, "Register", "Account", new { area = "" }, new { @class = "navbar-brand" });
                    @Html.ActionLink(MusiUploaderWeb.App_GlobalResources.RGlobal.LogIn, "Login", "Account", new { area = "" }, new { @class = "navbar-brand" });

                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="languages">
            <ui class="langs" style="list-style: none;">
                <li style="display:inline;">
                    <a href="" class="setLang" data-lang="en-US"><img src="@MusiUploaderWeb.Helpers.UrlHelperExtensions.GetImage(Url, "english.jpg", false)"/></a>
                </li>
                <li style="display:inline;">
                    <a href="" class="setLang" data-lang="hr-HR"><img src="@MusiUploaderWeb.Helpers.UrlHelperExtensions.GetImage(Url, "croatian.jpg", false)" /></a>
                </li>
                <li style="display:inline;">
                    <a href="" class="setLang" data-lang="hr-HR"><img src="@MusiUploaderWeb.Helpers.UrlHelperExtensions.GetImage(Url, "welcome.jpg", true)" /></a>
                </li>
            </ui>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>